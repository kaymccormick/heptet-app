<form method="post" action="{{ route_path('domain_create') }}">
    <div class="form-group">
        <label for="domain_name">Domain name</label>
        <input type="text" class="form-control" id="domain_name" aria-describedby="hostnameHelp"
               placeholder="domain.com" name="domain_name">
        <small id="hostnameHelp" class="form-text text-muted">Enter the domain name.</small>
    </div>
    <div class="form-group">
        <label for="organization_id">Organization</label>
        <select id="organization_id" name="organization_id">
            {%  for org in orgs %}
            <option value="{{ org.id }}">{{ org.name }}</option>
            {%  endfor %}
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
