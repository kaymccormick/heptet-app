{% extends "templates/main_child.jinja2" %}
{% block content %}
    <div class="container">
        <div class="row col-sm-12">
            <h1>{{ entity.name }}</h1>
        </div>
        <div class="row col-sm-12">
            <h2>Organizations</h2>
        </div>
        <div class="row col-sm-12">
            <table class="table">
                {% for orgperson in entity.organizations %}
                    <tr><td><a href="{{ route_path('organization', id=orgperson.organization_id) }}">{{ orgperson.organization.name }}</a></td></tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
