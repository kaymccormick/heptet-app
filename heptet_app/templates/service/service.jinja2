{% extends "templates/main_child.jinja2" %}
{% block content %}
<div class="card" style="width: 18rem;">
  <div class="card-body">
       <div class="card-header">{{ service.name }}</div>
    <ul class="list-group list-group-flush">
    <li class="list-group-item">Port {{ service.port_num }}</li>
    <li class="list-group-item">Protocol {{ service.protocol_name }}</li>
  </ul>
    <p class="card-text">{{ service.description }}</p>
  </div>
</div>
{% endblock %}
